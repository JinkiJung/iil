{
  "$id": "https://github.com/JinkiJung/iil/iil.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "description": "A work description model.",
  "properties": {
    "id": {
      "type": "string",
      "format": "uuid",
      "description": "The unique identifier for an iil."
    },
    "namespace": {
      "type": "string",
      "description": ""
    },
    "version": {
      "type": "string",
      "description": ""
    },
    "help": {
      "type": "object",
      "additionalProperties": {
        "type": "object"
      },
      "description": ""
    },
    "about": {
      "type": "object",
      "additionalProperties": {
        "type": "object"
      },
      "description": ""
    },
    "goal": {
      "type": "string",
      "format": "uuid",
      "description": "Unique identifier for the goal that the task is associated with."
    },
    "input": {
      "type": "object",
      "additionalProperties": {
        "type": "object"
      },
      "description": "Input required for the task."
    },
    "activateIf": {
      "$ref": "#/$defs/Condition",
      "description": "A condition under which the task is activated."
    },
    "act": {
      "$ref": "#/$defs/Action",
      "description": "An action that the task performs."
    },
    "actor": {
      "$ref": "#/$defs/Actor",
      "description": "An actor who performs the task"
    },
    "finishIf": {
      "$ref": "#/$defs/Condition",
      "description": "A condition under which the task is completed."
    },
    "output": {
      "type": "object",
      "additionalProperties": {
        "type": "object"
      },
      "description": "Output produced by the task."
    },
    "variable": {
      "type": "object",
      "additionalProperties": {
        "type": "object"
      },
      "description": "Variables associated with the task."
    },
    "maintainer": {
      "type": "string",
      "description": ""
    },
    "owner": {
      "type": "string",
      "description": ""
    },
    "state": {
      "type": "string",
      "enum": [
        "NOT_ACTIVATED",
        "ACTIVATED",
        "PENDING",
        "FINISHED",
        "ABORTED"
      ],
      "description": ""
    },
    "abortIf": {
      "$ref": "#/$defs/Condition",
      "description": ""
    },
    "updatedAt": {
      "type": "string",
      "format": "date-time",
      "description": ""
    },
    "next": {
      "type": "object",
      "additionalProperties": {
        "type": "object"
      },
      "description": "Next task to be performed after the current task."
    }
  },
  "$defs" : {
    "Action": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "namespace": {
          "type": "string"
        },
        "version": {
          "type": "string"
        },
        "shortName": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "code": {
          "type": "string"
        }
      }
    },
    "Actor": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "iconLink": {
          "type": "string"
        },
        "actorList": {
          "uniqueItems": true,
          "type": "array",
          "items": {
            "$ref": "#/$defs/Actor"
          }
        },
        "group": {
          "type": "boolean"
        }
      }
    },
    "Condition": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "namespace": {
          "type": "string"
        },
        "version": {
          "type": "string"
        },
        "shortName": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": [
            "TIME",
            "LOCATION",
            "IIL_INPUT",
            "IIL_VARIABLE",
            "IIL_STATE",
            "EVENT"
          ]
        },
        "code": {
          "type": "string"
        }
      }
    }
  }
}
